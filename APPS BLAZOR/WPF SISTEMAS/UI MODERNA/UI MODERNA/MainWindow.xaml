<Window x:Class="UI_MODERNA.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
       mc:Ignorable="d"
       Title="Consulta de Obligaciones" Height="768" Width="1366"
       Background="White">
    <Window.Resources>
        <!-- Fade in -->
        <Storyboard x:Key="FadeInVideo">
            <DoubleAnimation Storyboard.TargetName="VideoScreensaver"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:1" />
        </Storyboard>

        <!-- Fade out -->
        <Storyboard x:Key="FadeOutVideo">
            <DoubleAnimation Storyboard.TargetName="VideoScreensaver"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:1" />
        </Storyboard>
    </Window.Resources>




    <Grid Name="MainGrid">
        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top" Height="120" Background="#F5F5F5">
                <Grid>
                    <Image Source="Resources/fachada.png"
                           Stretch="Uniform"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Height="180"/>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border DockPanel.Dock="Bottom" Background="#273E9F" Height="40">
                <TextBlock Text="Venezuela entre Chile y Espejo - Palacio Municipal | PBX: (593-2) 395 2300 | Cal l 91 001" 
                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
            </Border>

            <!-- Body -->
            <Grid Name="NormalContent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="3.5*"/>
                </Grid.ColumnDefinitions>

                <!-- Left background image -->
                <Image Grid.Column="0" Source="Resources/edificio.png" Stretch="Fill"/>

                <!-- Right card -->
                <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="0 20 20 20" BorderBrush="#B0C4DE" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tabs -->
                        <TabControl Grid.Row="0" Margin="10 0">
                            <TabItem Header="APELLIDOS Y NOMBRES" IsSelected="True">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.2*"/>
                                        <ColumnDefinition Width="2.8*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Panel izquierdo azul -->
                                    <Border Background="#1A2F6F" CornerRadius="8" Margin="10" Grid.Column="0">
                                        <StackPanel Margin="20">
                                            <TextBlock Text="Consulta de Obligaciones" FontSize="24" FontWeight="Bold" Foreground="White" TextAlignment="Center" Margin="0 10"/>
                                            <Button Style="{StaticResource MaterialDesignOutlinedButton}" Background="White" Height="80" Margin="0 20 0 10">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Monitor" Width="24" Height="24" Margin="0 0 10 0"/>
                                                    <TextBlock Text="Consulte aquí si fue beneficiario del proceso de extinción de las deudas tributarias"
                                                               TextWrapping="Wrap" VerticalAlignment="Center" FontWeight="Bold" Width="200"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Border>

                                    <!-- Formulario lado derecho -->
                                    <StackPanel Grid.Column="1" Margin="20">
                                        <TextBlock Text="Ingrese sus apellidos y nombres" FontWeight="Bold" Margin="0 0 0 5"/>

                                        <DockPanel Margin="0 0 0 10">
                                            <materialDesign:PackIcon Kind="AccountMultiple" Width="24" Height="24" VerticalAlignment="Center" Margin="0 0 10 0" />
                                            <TextBox x:Name="TxtNombres"
                                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                     Width="300"
                                                     materialDesign:HintAssist.Hint="Apellidos y nombres"
                                                     GotFocus="TxtNombres_GotFocus"/>               
                                        </DockPanel>

                                        <TextBlock Text="Verificar que no es un robot" FontWeight="Bold" Margin="0 10 0 5"/>

                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 5">
                                            <Image Source="Resources/fachada.png" Height="50" Width="100" />
                                            <materialDesign:PackIcon Kind="Autorenew" Width="24" Height="24" Margin="10 0" VerticalAlignment="Center" />
                                            <StackPanel Margin="10 0 0 0">
                                                <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="100"
                                                         materialDesign:HintAssist.Hint="Código"/>
                                                <TextBlock Text="Introduzca el código" FontSize="10" Foreground="Gray" />
                                            </StackPanel>
                                        </StackPanel>

                                        <TextBlock Text="Escuchar audio" Foreground="Gray" FontSize="12" Margin="0 5"/>

                                        <Button Content="CONSULTAR"
                                                Style="{StaticResource MaterialDesignRaisedButton}"
                                                Background="#39B5F8" Foreground="White"
                                                Height="40" FontWeight="Bold" HorizontalAlignment="Stretch"
                                                Margin="0 20 0 0"/>
                                    </StackPanel>
                                </Grid>
                            </TabItem>

                            <TabItem Header="NÚMERO DE PREDIO"/>
                            <TabItem Header="NÚMERO DE RAM"/>
                            <TabItem Header="VEHÍCULOS"/>
                        </TabControl>
                    </Grid>
                </Border>
            </Grid>
        </DockPanel>

        <!-- Video en pantalla completa -->
        <MediaElement Name="VideoScreensaver"
                      Source="Resources/test.mp4"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Stop"
                      Stretch="Fill"
                      Visibility="Collapsed"
                      Panel.ZIndex="99"
                      MediaEnded="VideoScreensaver_MediaEnded" />
    </Grid>
</Window>
