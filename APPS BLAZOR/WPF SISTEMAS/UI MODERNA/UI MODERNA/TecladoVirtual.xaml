<Window x:Class="UI_MODERNA.TecladoVirtual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="TecladoVirtual" Height="350" Width="300"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True"
        Background="White" AllowsTransparency="True">

    <Grid Margin="10">
        <UniformGrid Columns="3" Rows="4" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="1" Click="Key_Click" />
            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="2" Click="Key_Click" />
            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="3" Click="Key_Click" />

            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="4" Click="Key_Click" />
            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="5" Click="Key_Click" />
            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="6" Click="Key_Click" />

            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="7" Click="Key_Click" />
            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="8" Click="Key_Click" />
            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="9" Click="Key_Click" />

            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="←" Click="Backspace_Click" />
            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="0" Click="Key_Click" />
            <Button Style="{StaticResource MaterialDesignFlatButton}" Content="✖" Click="Cerrar_Click" />
        </UniformGrid>
    </Grid>
</Window>